#include <stdio.h>
#include <string.h>

void reverse(char str1[], char str2[]){
    int len = strlen(str1);
    for(int i = 0; i < len; i++){
        str2[i] = str1[len - 1 - i];
    }
    str2[len] = '\0';
}

int main(){
    char word[100];
    char reversedWord[100];
    printf("Enter a word: ");
    scanf("%s", word);
    reverse(word, reversedWord);
    printf("Reversed word: %s\n", reversedWord);
    return 0;
}
