#include <stdio.h>

void upgrade(char gender, float *gpa);

int main() {
    float gpa;
    char gender;

    // รับค่าเพศ
    printf("Enter gender (M/F): ");
    scanf(" %c", &gender);

    // รับค่า GPA
    printf("Enter GPA: ");
    scanf("%f", &gpa);

    // แสดงค่า GPA ก่อนการอัพเกรด
    printf("GPA before upgrade: %.2f\n", gpa);

    // เรียกใช้ฟังก์ชันอัพเกรด
    upgrade(gender, &gpa);

    // แสดงค่า GPA หลังการอัพเกรด
    printf("GPA after upgrade: %.2f\n", gpa);

    return 0;
}

// อัพเกรด GPA ตามเพศ
void upgrade(char gender, float *gpa) {
    if (gender == 'M' || gender == 'm') {
        // เพิ่ม GPA 10% สำหรับผู้ชาย
        *gpa = *gpa * 1.10f;
    } 
    else if (gender == 'F' || gender == 'f') {
        // เพิ่ม GPA 20% สำหรับผู้หญิง
        *gpa = *gpa * 1.20f;
    }
}
