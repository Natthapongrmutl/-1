#include <stdio.h>
#include <stdlib.h>

struct student {
    char name[50];
    int age;
};

struct student (*GetStudent(int *room))[10] {
    int i, j;
    printf("Enter number of classrooms: ");
    scanf("%d", room);

    // เก็บข้อมูลนักเรียน
    struct student (*students)[10] = malloc((*room) * sizeof(struct student[10]));

    for (i = 0; i < *room; i++) {
        printf("Classroom %d:\n", i + 1);
        for (j = 0; j < 10; j++) {
            printf("  Enter name for student %d: ", j + 1);
            scanf("%s", students[i][j].name);
            printf("  Enter age for student %d: ", j + 1);
            scanf("%d", &students[i][j].age);
        }
    }
    return students;
}

int main() {
    struct student (*children)[10];
    int group;
    children = GetStudent(&group);

    // แสดงข้อมูลนักเรียน
    for (int i = 0; i < group; i++) {
        printf("Classroom %d:\n", i + 1);
        for (int j = 0; j < 10; j++) {
            printf("  Name: %s, Age: %d\n", children[i][j].name, children[i][j].age);
        }
    }

    free(children);
    return 0;
}
