#include <stdio.h>
#include <string.h>

int main() {
    char word[100];
    
    printf("Enter a word: ");
    scanf("%s", word);
    
    int len = strlen(word);
    
    printf("Reversed word: ");
    for (int i = len - 1; i >= 0; i--) {
        printf("%c", word[i]);
    }
    printf("\n");
    
    return 0;
}
